<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailsCharacterFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imgView_fragmetnDetailsCharacter_characterImage"
        android:layout_width="@dimen/default_icon_size_character"
        android:layout_height="@dimen/default_icon_size_character"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/txtView_fragmentDetailsCharacter_nameCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imgView_fragmetnDetailsCharacter_characterImage"
        app:layout_constraintStart_toStartOf="@id/imgView_fragmetnDetailsCharacter_characterImage"
        app:layout_constraintEnd_toEndOf="@id/imgView_fragmetnDetailsCharacter_characterImage"
        tools:text="NAME"/>

    <!-- Specie of the character-->
    <TextView
        android:id="@+id/txtView_specieCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/specie_label"
        android:layout_marginTop="@dimen/margin_TOP_labesl_characterDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtView_fragmentDetailsCharacter_specieCharacter"
        app:layout_constraintTop_toBottomOf="@id/txtView_fragmentDetailsCharacter_nameCharacter"
        tools:text="SPECIE" />
    <TextView
        android:id="@+id/txtView_fragmentDetailsCharacter_specieCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_TOP_labesl_characterDetails"
        app:layout_constraintStart_toEndOf="@id/txtView_specieCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtView_fragmentDetailsCharacter_nameCharacter"
        tools:text="specie"/>

    <!-- Status of the character-->
    <TextView
        android:id="@+id/txtView_statusCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtView_fragmentDetailsCharacter_statusCharacter"
        app:layout_constraintTop_toBottomOf="@id/txtView_specieCharacter"
        tools:text="STATUS"/>
    <TextView
        android:id="@+id/txtView_fragmentDetailsCharacter_statusCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txtView_statusCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtView_fragmentDetailsCharacter_specieCharacter"
        tools:text="status"/>

    <!-- Gender of the character-->
    <TextView
        android:id="@+id/txtView_genderCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gender_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtView_fragmentDetailsCharacter_genderCharacter"
        app:layout_constraintTop_toBottomOf="@id/txtView_statusCharacter"
        tools:text="GENDER"/>
    <TextView
        android:id="@+id/txtView_fragmentDetailsCharacter_genderCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txtView_genderCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtView_fragmentDetailsCharacter_statusCharacter"
        tools:text="gender"/>



</androidx.constraintlayout.widget.ConstraintLayout>