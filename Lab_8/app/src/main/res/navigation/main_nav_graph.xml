<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/logInFragment">
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.lab_8.ui.fragments.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_charactersFragment"
            app:destination="@id/charactersListFragment" />
    </fragment>
    <fragment
        android:id="@+id/charactersListFragment"
        android:name="com.example.lab_8.ui.fragments.CharacterFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters" >
        <action
            android:id="@+id/action_charactersFragment_to_detailsCharacterFragment"
            app:destination="@id/detailsCharacterFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsCharacterFragment"
        android:name="com.example.lab_8.ui.fragments.DetailsCharacterFragment"
        android:label="fragment_details_character"
        tools:layout="@layout/fragment_details_character">
        <argument
            android:name="id"
            app:argType="integer"
            />
    </fragment>

</navigation>